<!DOCTYPE html>
<html>
@{
    string Name = (string)Session["UserName"];
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" type="text/css" />
    <link href="~/Content/bootstrap/css/business-casual.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/font/css/font-awesome.min.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/css/isotope.css" media="screen" />
    <link rel="stylesheet" href="~/Content/bootstrap/js/fancybox/jquery.fancybox.css" type="text/css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/css/da-slider.css" />
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/bootstrap/js/npm.js"></script>
    <script type="text/javascript" src="~/Content/jQuery/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="~/Content/Bootstrap/js/bootstrap.min.js"></script>

    <!-- Owl Carousel Assets -->
    <link href="~/Content/bootstrap/js/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css" />
    <!-- Font Awesome -->
    <link href="~/Content/bootstrap/font/css/font-awesome.min.css" rel="stylesheet">
</head>
<body style="background-color:lightblue">

    <script src="~/Content/bootstrap/js/modernizr-latest.js"></script>
    <script src="~/Content/bootstrap/js/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/jquery.isotope.min.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/fancybox/jquery.fancybox.pack.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/jquery.nav.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/jquery.cslider.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/custom.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/owl-carousel/owl.carousel.js"></script>
     
    <header class="header" style="background-color:dimgrey">
        <nav class="navbar navbar-default " role="navigation">
            <div class=" container-fluid">
                <h5 style="font-family:'Bookman Old Style';font-size:30px;padding-top:10px"> Admin Panel</h5>
                <button style="float:right">
                    <div class="btn btn-lg"> <span  class="glyphicon glyphicon-user"></span> @Name @Html.ActionLink("Log out", "Login", "Home") </div>
                </button>   
                 <ul class="nav navbar-nav" style="padding-right:70px">
                   
                    <li>@Html.ActionLink("Add New Item", "Add", "Admin")</li>
                    <li>@Html.ActionLink("Delete Item", "Delete", "Admin")</li>
                    <li>@Html.ActionLink("Update Rates", "Update", "Admin")</li>


                    </ul>
            </div>
        </nav>
    </header>
    
  
    
    @RenderBody()

    
        

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
