@{
    ViewBag.Title = "DeleteFruit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h3 style="font-family:'Colonna MT';font-size:90px;color:red;padding-left:300px">Rate List</h3>

    <div>

    </div>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Fruits</th>
                <th>Image</th>
                <th>FirstLevel Rs/kg</th>
                <th>SecondLevel Rs/Kg</th>
                <th>ThirdLevel Rs/Kg</th>
                <th> Update</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
{
    <tr>
        <td style="padding-left:20px">@i.Name</td>

        <td style="padding-left:20px"><img src="~/Images/@i.Image" width="50" height="50"></td>
        <td style="padding-left:20px">@i.lev1</td>
        <td style="padding-left:20px">@i.lev2</td>
        <td style="padding-left:20px">@i.lev3</td>
        <td><button style="margin-left:20px; margin-top:8px" class="btn btn-danger " type="submit" onclick="location.href='/Admin/DeleteFruits?id=@i.Id'"><span class="glyphicon glyphicon-remove"></span></button></td>
    </tr>
}
        </tbody>
    </table>
</div>
