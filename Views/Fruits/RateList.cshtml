@{
    Layout = "~/Views/Shared/FruitsLayout.cshtml";
}

<div>
    <img src="~/Images/welcome.jpg" style="padding-left:100px ; padding-right:50px" width="1300" height="300">
</div>


<div class="container">
    <h3 style="font-family:'Colonna MT';font-size:90px;color:red;padding-left:300px" >Rate List</h3>
    
    <div>

    </div>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Fruits</th>
                <th>Image</th>
                <th>FirstLevel Rs/kg</th>
                <th>SecondLevel Rs/Kg</th>
                <th>ThirdLevel Rs/Kg</th>

            </tr>
        </thead>

        <tbody>
            @foreach ( var i in Model)
            { 
            <tr>
                <td style="padding-left:20px">@i.Name</td>

                <td style="padding-left:20px"><img src="~/Images/@i.Image" width="50" height="50"></td>
                <td style="padding-left:20px">@i.lev1</td>
                <td style="padding-left:20px">@i.lev2</td>
                <td style="padding-left:20px">@i.lev3</td>
            </tr>
            }
           
           
        </tbody>
    </table>
    <div>
        <a href="~/Home/Comments" type="button" class="btn btn-info btn-default">Show Comments</a>
    </div>
</div>